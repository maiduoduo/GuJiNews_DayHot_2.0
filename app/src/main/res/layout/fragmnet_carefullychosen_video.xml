<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.cnews.guji.smart.view.widget.state.LoadFrameLayout
        android:id="@+id/load_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadErrorView="@layout/load_layout_error">
        <include
            android:id="@+id/refreshFramelayout"
            layout="@layout/layout_recyclerview_carechosen_video"/>
    </com.cnews.guji.smart.view.widget.state.LoadFrameLayout>
    <include
        android:id="@+id/ar_empty_view"
        layout="@layout/view_empty"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/fbToTop"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/ico_refresh_gray_128px" />


</RelativeLayout>