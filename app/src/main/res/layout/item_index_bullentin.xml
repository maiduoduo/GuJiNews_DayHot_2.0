<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/home_bulletin_corner_bg"
        android:orientation="horizontal">
        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/title_img"
            android:layout_width="@dimen/dp_120"
            android:layout_height="50dp"
            android:layout_centerVertical="true"/>
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:flipInterval="3000"
            android:inAnimation="@anim/in_animation"
            android:outAnimation="@anim/out_animation" />
        <!--<com.cnews.guji.smart.helper.UpDownViewSwitcher
            android:id="@+id/home_view_switcher"
            android:layout_gravity="center_vertical"
            app:animator_duration="400"
            app:switch_duration="3000"
            app:up_to_down="false"
            app:animator_translate_distance="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->
    </LinearLayout>
    <TextView
        android:id="@+id/btm_divider_best"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LGray3" />
</LinearLayout>