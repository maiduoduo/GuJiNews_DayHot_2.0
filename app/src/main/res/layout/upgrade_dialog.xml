<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#32000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/bg_bugly"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:tag="beta_title"
            android:id="@+id/beta_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/beta_title"
            android:id="@+id/divider"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="0.5dp">
        </View>
        <TextView
            android:textColor="#000"
            android:text="11111"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_below="@+id/divider"
            android:id="@+id/beta_upgrade_feature"
            android:tag="beta_upgrade_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_below="@+id/beta_upgrade_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">
            </View>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="下次再说"
                    android:textSize="16sp"
                    android:id="@+id/beta_cancel_button"
                    android:tag="beta_cancel_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <View
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#EEEEEE"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="#04c904"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="立即更新"
                    android:id="@+id/beta_confirm_button"
                    android:tag="beta_confirm_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:tag="beta_upgrade_info"
        android:id="@+id/beta_upgrade_info"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</RelativeLayout>