<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSingleBigRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_list_item_bg_selector"
    android:orientation="vertical">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/navigationTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/docTitleIcon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            fresco:placeholderImage="@mipmap/place_image_default"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="1dp"/>
        <TextView
            android:id="@+id/titleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/article_left_best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="新闻早知道，看遍天下大事新闻早知道，看遍天下大事新闻早知道，看遍天下大事"/>
        <FrameLayout
            android:id="@+id/flDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="5dp">
            <com.cnews.guji.smart.helper.imageview.ExpandImageView
                android:id="@+id/docImg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                fresco:placeholderImage="@mipmap/place_image_default"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="5dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/jc_play_normal"
                android:layout_gravity="center"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rlDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvsource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Gray3"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:text="的方法对付的"/>
                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="15dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/ic_homepage_comment_normal"/>
                <TextView
                    android:id="@+id/tvcommentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/ivComment"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/Gray3"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:text="155评"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_homepage_dislike_normal"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/LGray3">
    </TextView>
</LinearLayout>