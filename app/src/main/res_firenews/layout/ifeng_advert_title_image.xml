<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llDocTitleImg"
    android:layout_width="match_parent"
    android:paddingHorizontal="5dp"
    android:layout_height="@dimen/dp_120"
    android:paddingTop="@dimen/dp_10"
    android:background="@drawable/article_list_item_bg_selector"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10">
        <RelativeLayout
            android:layout_weight="9"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                android:textColor="@color/Gray1"
                android:textSize="16sp"
                android:ellipsize="end"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:includeFontPadding="false"
                android:maxLines="3" />
            <RelativeLayout
                android:id="@+id/rlDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tvStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingVertical="@dimen/dp_1"
                    android:paddingHorizontal="2dp"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/alpha_35_black"
                    android:background="@drawable/shape_gray_round_a"
                    android:text="@string/advert"/>
                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvStyle"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/alpha_35_black"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_homepage_dislike_normal"/>
            </RelativeLayout>
        </RelativeLayout>
        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/ivImage"
            android:layout_weight="1"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@mipmap/img_banner2"
            fresco:placeholderImage="@drawable/default_img_place"
            fresco:roundedCornerRadius="1dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"/>
    </LinearLayout>
    <include layout="@layout/line_1dp_layout"/>
</LinearLayout>