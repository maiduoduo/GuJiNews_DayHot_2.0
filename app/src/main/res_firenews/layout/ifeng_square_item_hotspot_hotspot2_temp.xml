<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSingleBigRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/dp_18"
    android:layout_marginRight="@dimen/dp_5"
    android:clickable="true"
    android:orientation="vertical">
    <!-- 必须要加clickable=true 让其可以点击  不然onStartNestedScroll重复执行2次-->
    <LinearLayout
        android:id="@+id/article_left_best"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/flDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <com.cnews.guji.smart.helper.imageview.ExpandImageView
                android:id="@+id/docImg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                fresco:placeholderImage="@mipmap/place_image_default"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingHorizontal="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="20小时前" />
                    <TextView
                        android:id="@+id/tvComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="256985阅" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvNavigationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                   android:layout_marginVertical="@dimen/dp_5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="公司观察0205" />
                <TextView
                    android:id="@+id/tvTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="翻阅有声 做最懂你的陪伴者翻阅有声 做最懂你的陪伴者翻阅有声 做最懂你的陪伴者" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>