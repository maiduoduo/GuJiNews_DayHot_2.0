<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/titleComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门评论"
        android:layout_marginVertical="@dimen/dp_10"
        android:paddingTop="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/Gray1"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">
            <com.cnews.guji.smart.helper.imageview.ExpandImageView
                android:id="@+id/iv_avatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@mipmap/place_image_default"
                fresco:roundAsCircle="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/Gray2"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:text=""
                    android:textColor="@color/Gray3" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-2.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6.0dip"
            android:maxLines="8"
            android:textColor="#505050"
            android:textSize="16.0sp"
            android:text=""/>
        <LinearLayout
            android:id="@+id/llChildComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray2"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:orientation="vertical">

            <com.cnews.guji.smart.view.TextViewStyleView
                android:id="@+id/tvStyleUname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Gray2"
                android:text="">
            </com.cnews.guji.smart.view.TextViewStyleView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/Gray3"
                android:layout_marginLeft="45dp" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="11sp"
                android:textColor="@color/Gray3"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_like_count"
                android:src="@drawable/ic_detail_love"/>

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LGray3">
    </TextView>
    <LinearLayout
        android:id="@+id/commentSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <com.cnews.guji.smart.helper.imageview.ExpandImageView
                android:id="@+id/iv_avatar1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@mipmap/place_image_default"
                fresco:roundAsCircle="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/Gray2"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvArea1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:text=""
                    android:textColor="@color/Gray3" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-2.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6.0dip"
            android:maxLines="8"
            android:textColor="#505050"
            android:textSize="16.0sp"
            android:text=""/>
        <LinearLayout
            android:id="@+id/llChildComment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray2"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <com.cnews.guji.smart.view.TextViewStyleView
                android:id="@+id/tvStyleUname2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Gray2"
                android:text="">
            </com.cnews.guji.smart.view.TextViewStyleView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text=""
                android:textColor="@color/Gray3"
                android:layout_marginLeft="45dp" />

            <TextView
                android:id="@+id/tv_like_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="11sp"
                android:textColor="@color/Gray3"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_like_count1"
                android:src="@drawable/ic_detail_love"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llListMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvAllSee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/Gray1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/doc_more_comment_icon"
            android:text="查看全部%s条评论"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/LGray3">
    </TextView>
</LinearLayout>