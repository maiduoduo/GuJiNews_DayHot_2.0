<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSlideNormalItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_roundring_gray"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvImgSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="4dp"
            android:background="@drawable/shape_bg_alpha_gray"
            android:text="9图"/>
        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/ivTop"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            fresco:placeholderImage="@drawable/default_img_place"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/tvTitle"
            android:textColor="@color/Gray1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:text="中国女子接力破纪录朝鲜统一部部长金英哲被替换，未露面金浦会SADSDASDSAJFLG的开发接口考试辅导合适的恢复健康速度发货速度福建省后返回的是发始动画粉红色的"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/alpha_35_black"
                android:text="养生中国"/>
            <ImageView
                android:id="@+id/ivComment"
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/tvSource"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_homepage_comment_normal"/>
            <TextView
                android:id="@+id/tvCommentnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/ivComment"
                android:textColor="@color/Gray3"
                android:textSize="12sp"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:text="66评"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_homepage_dislike_normal"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>