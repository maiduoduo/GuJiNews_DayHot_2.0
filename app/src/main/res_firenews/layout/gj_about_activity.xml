<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.activity.GJAboutActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.cnews.guji.smart.view.widget.CoolImageView
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:src="@mipmap/trans_image"
            app:direction="horizontal"
            app:moveTime="60">
        </com.cnews.guji.smart.view.widget.CoolImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/transparent">
            <!--@color/color_102e5f-->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:paddingLeft="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back_light" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:singleLine="true"
                android:text="关于"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_30"
                android:scaleType="fitXY"
                android:src="@mipmap/news_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_version_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="v1.3.1\n@GUJI-DINGCL"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>
    </FrameLayout>



</LinearLayout>