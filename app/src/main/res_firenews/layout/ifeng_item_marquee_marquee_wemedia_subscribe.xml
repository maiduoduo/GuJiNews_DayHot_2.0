<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llmarqueeDocNormalItem"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_10"
        android:background="@drawable/shape_roundring_gray"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_gravity="right"
                android:src="@mipmap/ic_homepage_dislike_normal"/>
            <com.cnews.guji.smart.helper.imageview.ExpandImageView
                android:id="@+id/eivHeaderIco"
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@mipmap/place_image_default"
                fresco:roundAsCircle="true"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="@dimen/dp_15">
            <TextView
                android:id="@+id/tvTitle"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text=""
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tvContent"
                android:textColor="@color/Gray2"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="12sp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:minLines="3"
                android:ellipsize="end"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">
               <!-- <TextView
                    android:id="@+id/tvGuanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/sp_12"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_button_red_round"
                    android:textColor="@color/white"
                    android:text="关注"/>-->
                <ImageView
                    android:id="@+id/ivGuanzhu"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_follow_normal"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>