<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSingleBigRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/article_list_item_bg_selector"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/video_userheader"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            fresco:placeholderImage="@mipmap/place_image_default"
            fresco:roundAsCircle="true"/>
        <TextView
            android:id="@+id/videoUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/Gray1"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/video_userheader"
            android:text=""/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tvClose"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_dark"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/article_left_best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/videoPlaytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text=""/>
        <FrameLayout
            android:id="@+id/flDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <com.cnews.guji.smart.helper.imageview.ExpandImageView
                android:id="@+id/videoThumbImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                fresco:placeholderImage="@mipmap/place_image_default"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="3dp"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ico_play_80px"
                android:layout_gravity="center"/>
        </FrameLayout>
        <!--标注-->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/navigationTop"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/aggregation_top_banner_bg"
            android:paddingVertical="@dimen/dp_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_20"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_ip_80px"/>
                <TextView
                    android:id="@+id/videoIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Gray3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:id="@+id/titleMix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray2"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_30"
                android:textSize="14sp"
                android:text=""/>

        </LinearLayout>
        <!--功能菜单-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_5"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvZan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Gray1"
                android:paddingLeft="@dimen/dp_15"
                android:drawablePadding="-10dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ico_zan_30px"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Gray1"
                android:paddingLeft="@dimen/dp_20"
                android:gravity="center"
                android:drawablePadding="-25dp"
                android:drawableLeft="@drawable/ico_cai_30px"
                android:textSize="14sp"
                android:text="踩"/>
            <TextView
                android:id="@+id/tvCommentNum"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Gray1"
                android:paddingLeft="@dimen/dp_10"
                android:drawablePadding="-10dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ico_comment_30px"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:id="@+id/tvShare"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Gray1"
                android:focusable="true"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:drawablePadding="-15dp"
                android:drawableLeft="@drawable/ico_share_30px"
                android:textSize="14sp"
                android:text="分享"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/LGray3">
    </TextView>
</LinearLayout>