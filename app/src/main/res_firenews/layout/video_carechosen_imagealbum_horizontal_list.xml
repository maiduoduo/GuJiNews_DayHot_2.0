<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/imgTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="#最好的日子 #"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@drawable/ico_next_20px"
            android:textColor="@color/Gray3"
            android:text="更多"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15">
      <!--  <com.cnews.guji.smart.helper.horizontaldragmoreview.FEle.DZStickyNavLayouts
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head_home_layout">-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/head_home_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:overScrollMode="never"
                android:scrollbars="none" />
      <!--  </com.cnews.guji.smart.helper.horizontaldragmoreview.FEle.DZStickyNavLayouts>-->
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/LGray3">
    </TextView>
</LinearLayout>

