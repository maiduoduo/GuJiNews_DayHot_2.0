<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LGray3"
   >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/sheetLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/light_gray2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/rect_share_material_tab"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="分享"
                android:textColor="@color/tipTextColor"
                android:textSize="12sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@mipmap/ad_banner_e" />

            <com.cnews.guji.smart.view.widget.PowerfulRecyclerView
                android:id="@+id/friendRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:scrollbars="horizontal" />
            <ImageView
                android:id="@+id/title_split_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="visible"
                android:background="@color/LGray2" />
            <com.cnews.guji.smart.view.widget.PowerfulRecyclerView
                android:id="@+id/appRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:scrollbars="horizontal"
                android:scrollbarSize="@dimen/dp_1"
                android:scrollbarStyle="insideInset"/>
            <ImageView
                android:id="@+id/title_split_line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="visible"
                android:background="@color/LGray2" />
            <com.cnews.guji.smart.view.widget.PowerfulRecyclerView
                android:id="@+id/linkRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:scrollbars="horizontal" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


