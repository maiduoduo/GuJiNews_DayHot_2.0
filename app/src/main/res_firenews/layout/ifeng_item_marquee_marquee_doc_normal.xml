<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llmarqueeDocNormalItem"
    android:layout_width="160dp"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_roundring_gray"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">
        <com.cnews.guji.smart.helper.imageview.ExpandImageView
            android:id="@+id/ivTop"
            android:layout_weight="1"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            fresco:placeholderImage="@drawable/default_img_place"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="@dimen/dp_5">
            <TextView
                android:id="@+id/tvTitle"
                android:textColor="@color/Gray1"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:minLines="3"
                android:ellipsize="end" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    android:maxLength="6"
                    android:textColor="@color/alpha_35_black"
                    android:text=""/>
                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="15dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/tvSource"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_homepage_comment_normal"/>
                <TextView
                    android:id="@+id/tvCommentnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/ivComment"
                    android:textColor="@color/Gray3"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_homepage_dislike_normal"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>